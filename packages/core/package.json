{
  "name": "@hope-ui/core",
  "version": "1.0.0-rc.1",
  "private": false,
  "description": "Hope UI core components library.",
  "keywords": [
    "solid",
    "solidjs",
    "ui",
    "library",
    "design-system",
    "components"
  ],
  "homepage": "https://github.com/hope-ui/hope-ui/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/hope-ui/hope-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hope-ui/hope-ui.git"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "sideEffects": false,
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "import": "./dist/esm/index.js",
      "browser": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
      },
      "require": "./dist/cjs/index.js",
      "node": "./dist/cjs/index.js"
    },
    "./style": "./dist/hope-ui.css"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c ../../configs/rollup.config.ts && postcss ./src/index.css -o ./dist/hope-ui.css",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "vite serve dev --host",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hope-ui/utils": "^1.0.0-rc.1",
    "@kobalte/core": "^0.3.1",
    "@kobalte/utils": "^0.3.0",
    "@solid-primitives/refs": "^0.3.4",
    "class-variance-authority": "^0.4.0"
  },
  "devDependencies": {
    "@hope-ui/tests": "^1.0.0-rc.1",
    "@kobalte/tailwindcss": "^0.2.0",
    "@tailwindcss/forms": "0.5.3",
    "autoprefixer": "10.4.13",
    "cssnano": "5.1.14",
    "postcss": "8.4.21",
    "postcss-cli": "10.1.0",
    "tailwindcss": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
